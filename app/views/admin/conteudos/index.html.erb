<h1>Conteúdos</h1>
</br>

<%= link_to 'Novo conteúdo', new_admin_conteudo_path, :class => 'btn btn-primary' %>
<br />
<br />
<table class="table table-striped">
  <tr>
    <th>Menu</th>
    <th>Titulo</th>
    <th>Texto curto</th>
    <th>Localização</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admin_conteudos.each do |admin_conteudo| %>
  <tr>
    <td><%= admin_conteudo.menu %></td>
    <td><%= admin_conteudo.titulo %></td>
    <td><%= admin_conteudo.texto_curto %></td>
    <td><%= admin_conteudo.localizacao %></td>
    <td><%= link_to 'Mostrar', admin_conteudo, :class => 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Alterar', edit_admin_conteudo_path(admin_conteudo), :class => 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Apagar', admin_conteudo, :confirm => 'Tem certeza que deseja apagar o conteúdo?', :method => :delete, :class => 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

